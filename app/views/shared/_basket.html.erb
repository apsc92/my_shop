<div class="basket">
  <% if has_order? && current_order.has_items? %>
    <p class="quantity"><b><%= pluralize current_order.total_items, 'item' %></b> in your cart</p>
    <p class="amount"><b><%= show_in_currency current_order.total_cost.round(2) %></b></p>
    <p class="buttons">
      <%= link_to "View cart & checkout", checkout_path, :class => 'checkout' %>
    </p>
  <% else %>
    <p class="empty"><b>Your cart is empty.</b> </p>
  <% end %>
</div>
