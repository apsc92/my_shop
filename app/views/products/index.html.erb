<h2 style="margin: 25px">Our Catalogue</h2>

<ul class="products">
  <% for product in @products %>
    <li>
      <div class="img"></div>
      <h4>
        <%= link_to product.name, product_path(product) %>
      </h4>
      <p class="info">
        <%= truncate product.description, :length => 90 %>
      </p>
      <p class="price">
        <%= show_in_currency product.price %>
      </p>
    </li>
  <% end %>
</ul>
