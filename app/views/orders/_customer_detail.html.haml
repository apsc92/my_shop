.row.col-md-6
  %h3 Customer Details

  = form_for @order, url: confirm_order_path, method: :post do |order_form|
    = order_form.fields_for @customer do |customer_form|
      .form-group
        = customer_form.label :email
        = customer_form.text_field :email, class: 'form-control', required: :true
      .form-group
        = customer_form.label :name
        = customer_form.text_field :name, class: 'form-control'
        %h3 Card Details
        = customer_form.fields_for @credit_card do |credit_card_form|
          .form-group
            = credit_card_form.label :number
            = credit_card_form.text_field :number, class: 'form-control', required: :true, placeholder: 'Card no'
          .form-group
            = credit_card_form.label :owner_name
            = credit_card_form.text_field :owner_name, class: 'form-control', required: :true, placeholder: 'Name on card'
    %h3 Billing address
    = order_form.fields_for Address.new do |address_form|
      .form-group
        = address_form.label :street_address
        = address_form.text_field :street_address, class: 'form-control', required: :true
      .form-group
        = address_form.label :city
        = address_form.text_field :city, class: 'form-control'
    = order_form.submit 'Place Order' , class: 'btn btn-primary', required: :true