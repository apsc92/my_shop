- @no_basket = true
.row.col-md-9.margin-left
  .panel.panel-primary
    .panel-heading
      Product Details
    .panel-body
      = render 'orders/order_listing', final_order: true

      - if @applied_promos.present?
        = render 'orders/promocode_listing', final_order: true

      .row
        .col-md-6
          %h3 Delivery address
          .form-group
            = label_tag 'Street Adrress'
            %input.form-control{:type => "text", :value => @order.address.street_address, :disabled => true}/
          .form-group
            = label_tag 'City'
            %input.form-control{:type => "text", :value => @order.address.city, :disabled => true}/
      .row.col-md-6
        = link_to 'Home', root_path, class: "btn btn-primary"


